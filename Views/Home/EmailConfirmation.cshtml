@{
    ViewData["Title"] = "Email Confirmation";
}

@model PersonalSiteMVC.Models.ContactViewModel

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Contact Me</h2>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
<section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="info-box text-center" style="color: white;">
                    <i class="bx bx-check-circle"></i>
                    <h3>Message Sent!</h3>
                    <p>
                        Thank you for contacting us! A member of our team will respond to your message
                        using the provided email address, @Model.Email, in the next 1-3 business days.
                    </p>

                    <br />

                    <div class="offset-3 col-md-6 text-center">
                        <p>
                            You sent the following message on @DateTime.Now.Date.ToShortDateString() at @DateTime.Now.ToShortTimeString():
                        </p>
                    </div>

                    <br />

                    <div class="offset-3 col-md-6">
                        <p>
                            <em>@Model.Message</em>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section><!-- End Confirmation Section -->

    <section id="contact" class="contact">
        <div data-aos="fade-up">
            <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d49599.377191714644!2d-94.84844936339182!3d39.01620144357589!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0922b0bbb5afd%3A0x69f07b93b7a758e3!2sShawnee%2C%20KS!5e0!3m2!1sen!2sus!4v1709094699962!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" " frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="container" data-aos="fade-up">
            <div class="row mt-5">

                <div class="col-lg-3">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>Shawnee, KS 66226</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 info">
                    <div class="email">
                        <a href="mailto:ethanjames.aa@gmail.com"><i class="bi bi-envelope"></i></a>
                        <h4>Email:</h4>
                        <p>ethanjames.aa@gmail.com</p>
                    </div>
                </div>

                <div class="col-lg-3 info">
                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 620 966 6502</p>
                    </div>
                </div>

                <div class="col-lg-3 info">
                    <div class="linked">
                        <a href="https://www.linkedin.com/in/ethan-alexander-dev/"><i class="bi bi-linkedin"></i></a>
                        <h4>LinkedIn</h4>
                    </div>
                </div>

            </div>
        </div>
    </section><!-- End Contact Section -->
</main>