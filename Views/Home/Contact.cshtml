@model PersonalSiteMVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs mt-5" data-aos="fade-in">
        <div class="container">
            <h2>Contact Me</h2>
        </div>
    </div><!-- End Breadcrumbs -->

<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div data-aos="fade-up">
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d49599.377191714644!2d-94.84844936339182!3d39.01620144357589!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0922b0bbb5afd%3A0x69f07b93b7a758e3!2sShawnee%2C%20KS!5e0!3m2!1sen!2sus!4v1709094699962!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" " frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="container" data-aos="fade-up">

        <div class="row mt-5">
            <div class="col-lg-4">
                <div class="info">

                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>Shawnee, KS 66226</p>
                    </div>

                    <div class="email">
                        <a href="mailto:ethanjames.aa@gmail.com"><i class="bi bi-envelope"></i></a>
                        <h4>Email:</h4>
                        <p>ethanjames.aa@gmail.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 620 966 6502</p>
                    </div>

                    <div class="linked">
                        <a href="https://www.linkedin.com/in/ethan-alexander-dev/"><i class="bi bi-linkedin"></i></a>
                        <h4>LinkedIn</h4>
                    </div>

                </div>
            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                @* Conditionally render the Recaptcha error message if one exists*@
                @if (ViewBag.RecaptchaError != null)
                {
                    <div class="alert alert-warning text-center" align="center">
                        <p style="display: inline;">
                    @ViewBag.RecaptchaError
                        </p>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 form-group">
                        <form asp-action="Contact">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label" style="color: white;"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                                <div class="form-group mt-3 mt-md-0">
                                <label asp-for="Email" class="control-label" style="color: white;"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                                <div class="form-group mt-3">
                                <label asp-for="Subject" class="control-label" style="color: white;"></label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                                <div class="form-group mt-3">
                                <label asp-for="Message" class="control-label" style="color: white;"></label>
                                <textarea asp-for="Message" class="form-control"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="padding: 50px; align-content: center;">
                                <recaptcha align="center"/>
                                <input type="submit" value="Send Message" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Contact Section -->
</main>
 
